<?xml version="1.0" encoding="UTF-8"?>
<Configuration state="WARN">

    <Properties>
        <Property name="log-path">.</Property>
    </Properties>

    <!-- Appenders (writing to file in various ways) -->
    <Appenders>
        <RollingFile name="INTERNAL"
                     fileName="${log-path}/integration-test.log"
                     filePattern="${log-path}/%d{yyyy-MM-dd}-integration-test-%i.log">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] [%-5level] %c{1}: %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="9"/>
        </RollingFile>

        <RollingFile name="STATISTICS"
                     fileName="${log-path}/statistics.txt"
                     filePattern="${log-path}/statistics-%i.txt">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}: %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="9"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <logger name="org.gautelis.vopn" level="WARN" />
        <logger name="org.gautelis.ipto.repo" level="INFO" />
        <logger name="org.gautelis.ipto.graphql" level="INFO" />
        <logger name="org.apache" level="WARN" />

        <logger name="STATISTICS" level="INFO">
            <appender-ref ref="STATISTICS"/>
        </logger>

        <Root level="INFO">
            <appender-ref ref="INTERNAL"/>
        </Root>
    </Loggers>
</Configuration>
